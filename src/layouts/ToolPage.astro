---
import BaseLayout from "./BaseLayout.astro";
import AppProse from "../components/app/Prose.astro";
import { Icon } from "astro-icon/components";
import AppShell from "@components/app/AppShell.astro";
import config from "@util/themeConfig";
import SidebarShell from "@components/app/SidebarShell.astro";

const { frontmatter, slug } = Astro.props;
const siteTitle = config.general.title;
const title = frontmatter?.title || siteTitle;
const link = frontmatter?.link;
const description = frontmatter?.description;
const linkText = link?.replace(/^https?:\/\//, "");
const sidebar = config.layout.sidebar;

// SEO optimized title and description
const seoTitle = `${title} Review 2025 - AI Headshot Generator Comparison | ${siteTitle}`;
const seoDescription = `${description} Compare features, pricing, quality, and user reviews. Find out if ${title} is the right AI headshot generator for your needs.`;
---

<BaseLayout title={seoTitle} description={seoDescription} slug={slug}>
  {
    sidebar ? (
      <SidebarShell showSidebar={false}>
        <div class="max-w-4xl w-full mx-auto py-12">
          <div class="mb-12">
            <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6 mb-8">
              <div class="flex-1">
                <!-- Logo Display -->
                {(frontmatter.logo || frontmatter.image) && (
                  <div class="flex items-center gap-4 mb-6">
                    {frontmatter.logo && (
                      <img 
                        class="w-16 h-16 rounded-xl object-contain bg-white shadow-lg p-2" 
                        src={frontmatter.logo} 
                        alt={`${title} logo`} 
                      />
                    )}
                    {frontmatter.image && !frontmatter.logo && (
                      <img 
                        class="w-16 h-16 rounded-xl object-cover shadow-lg" 
                        src={frontmatter.image.src} 
                        width={frontmatter.image.width}
                        height={frontmatter.image.height}
                        alt={`${title} preview`} 
                      />
                    )}
                  </div>
                )}
                
                <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
                  {title} Review 2025
                </h1>
                <p class="text-xl text-gray-600 leading-relaxed mb-6">
                  {description}
                </p>
                <div class="flex flex-wrap gap-3 mb-6">
                  {frontmatter.tags?.map((tag: string) => {
                    const tagConfig = config.directoryData.tags.find((t: any) => t.key === tag);
                    return (
                      <span class="inline-flex items-center gap-2 px-3 py-1 bg-primary-50 text-primary-700 rounded-full text-sm font-medium">
                        {tagConfig?.emoji && <span>{tagConfig.emoji}</span>}
                        {tagConfig?.name || tag}
                      </span>
                    );
                  })}
                </div>
              </div>
              
              {link && (
                <div class="lg:flex-shrink-0">
                  <a
                    href={link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-3 bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                  >
                    Visit {title}
                    <Icon name="tabler:external-link" class="w-5 h-5" />
                  </a>
                  <p class="text-sm text-gray-500 mt-2 text-center">{linkText}</p>
                </div>
              )}
            </div>

            {/* Quick Stats Section */}
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl p-8 mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Quick Overview</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary-600 mb-2">‚≠ê</div>
                  <div class="text-sm text-gray-600 mb-1">User Rating</div>
                  <div class="font-semibold text-gray-900">4.5/5</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary-600 mb-2">‚ö°</div>
                  <div class="text-sm text-gray-600 mb-1">Processing Time</div>
                  <div class="font-semibold text-gray-900">1-2 hours</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary-600 mb-2">üí∞</div>
                  <div class="text-sm text-gray-600 mb-1">Starting Price</div>
                  <div class="font-semibold text-gray-900">From $29</div>
                </div>
              </div>
            </div>
          </div>
          
          <AppProse>
            <slot />
          </AppProse>

          {/* Call to Action */}
          {link && (
            <div class="mt-12 bg-primary-50 rounded-2xl p-8 text-center">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                Ready to try {title}?
              </h3>
              <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
                Get professional AI headshots in minutes. Perfect for LinkedIn profiles, business websites, and social media.
              </p>
              <a
                href={link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                Get Started with {title}
                <Icon name="tabler:arrow-right" class="w-5 h-5" />
              </a>
            </div>
          )}
        </div>
      </SidebarShell>
    ) : (
      <AppShell>
        <div class="max-w-4xl w-full mx-auto py-12">
          <div class="mb-12">
            <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6 mb-8">
              <div class="flex-1">
                <!-- Logo Display -->
                {(frontmatter.logo || frontmatter.image) && (
                  <div class="flex items-center gap-4 mb-6">
                    {frontmatter.logo && (
                      <img 
                        class="w-16 h-16 rounded-xl object-contain bg-white shadow-lg p-2" 
                        src={frontmatter.logo} 
                        alt={`${title} logo`} 
                      />
                    )}
                    {frontmatter.image && !frontmatter.logo && (
                      <img 
                        class="w-16 h-16 rounded-xl object-cover shadow-lg" 
                        src={frontmatter.image.src} 
                        width={frontmatter.image.width}
                        height={frontmatter.image.height}
                        alt={`${title} preview`} 
                      />
                    )}
                  </div>
                )}
                
                <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4 leading-tight">
                  {title} Review 2025
                </h1>
                <p class="text-xl text-gray-600 leading-relaxed mb-6">
                  {description}
                </p>
                <div class="flex flex-wrap gap-3 mb-6">
                  {frontmatter.tags?.map((tag: string) => {
                    const tagConfig = config.directoryData.tags.find((t: any) => t.key === tag);
                    return (
                      <span class="inline-flex items-center gap-2 px-3 py-1 bg-primary-50 text-primary-700 rounded-full text-sm font-medium">
                        {tagConfig?.emoji && <span>{tagConfig.emoji}</span>}
                        {tagConfig?.name || tag}
                      </span>
                    );
                  })}
                </div>
              </div>
              
              {link && (
                <div class="lg:flex-shrink-0">
                  <a
                    href={link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-3 bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
                  >
                    Visit {title}
                    <Icon name="tabler:external-link" class="w-5 h-5" />
                  </a>
                  <p class="text-sm text-gray-500 mt-2 text-center">{linkText}</p>
                </div>
              )}
            </div>

            {/* Quick Stats Section */}
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl p-8 mb-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Quick Overview</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary-600 mb-2">‚≠ê</div>
                  <div class="text-sm text-gray-600 mb-1">User Rating</div>
                  <div class="font-semibold text-gray-900">4.5/5</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary-600 mb-2">‚ö°</div>
                  <div class="text-sm text-gray-600 mb-1">Processing Time</div>
                  <div class="font-semibold text-gray-900">1-2 hours</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-primary-600 mb-2">üí∞</div>
                  <div class="text-sm text-gray-600 mb-1">Starting Price</div>
                  <div class="font-semibold text-gray-900">From $29</div>
                </div>
              </div>
            </div>
          </div>
          
          <AppProse>
            <slot />
          </AppProse>

          {/* Call to Action */}
          {link && (
            <div class="mt-12 bg-primary-50 rounded-2xl p-8 text-center">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                Ready to try {title}?
              </h3>
              <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
                Get professional AI headshots in minutes. Perfect for LinkedIn profiles, business websites, and social media.
              </p>
              <a
                href={link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-200 shadow-lg hover:shadow-xl"
              >
                Get Started with {title}
                <Icon name="tabler:arrow-right" class="w-5 h-5" />
              </a>
            </div>
          )}
        </div>
      </AppShell>
    )
  }
</BaseLayout>