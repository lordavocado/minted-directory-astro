---
import DirectoryCard from "./cards/index.astro";
import config from "@util/themeConfig";

const { listings } = Astro.props;
const type = config.directoryUI.grid.type;
---

<div
  class:list={[
    "not-prose grid gap-8 fade-in",
    { 
      "grid-cols-1": type === "icon-list",
      "grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2": type === "rectangle-card-grid",
      "grid-cols-1 sm:grid-cols-2 lg:grid-cols-3": type === "small-card-grid"
    },
  ]}
>
  {
    Array.isArray(listings) && listings.length > 0 ? (
      listings.map((e: any) => <DirectoryCard item={e} />)
    ) : (
      <div class="col-span-full text-center py-16">
        <div class="mx-auto max-w-md">
          <div class="mx-auto h-12 w-12 text-gray-400 mb-4">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">No AI headshot generators found</h3>
          <p class="text-gray-600">Try adjusting your search or filters to find the perfect AI headshot tool for your needs.</p>
        </div>
      </div>
    )
  }
</div>