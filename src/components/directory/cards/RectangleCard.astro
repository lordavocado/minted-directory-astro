---
import UiTag from "@components/ui/tags/Tag.astro";
import DirectoryFeaturedTag from "../FeaturedTag.astro";
const { myItem, href } = Astro.props;
---

<a href={href}
  class="block h-full bg-white border border-gray-200 hover:border-gray-300 hover:shadow-xl rounded-xl relative group transition-all duration-300 overflow-hidden card-hover">
  { myItem.featured ? <DirectoryFeaturedTag class="ml-6"  /> : <></> }
  
  <!-- Logo Section -->
  <div class="relative bg-gradient-to-br from-gray-50 to-gray-100 p-8 flex items-center justify-center h-56">
    { myItem.logo ? 
      <img class="w-16 h-16 object-contain group-hover:scale-110 transition-transform duration-300"
        src={myItem.logo} alt={`${myItem.title} logo`} /> :  
      <div class="w-16 h-16 bg-gradient-to-br from-primary-100 to-primary-200 rounded-xl flex items-center justify-center">
        <span class="text-primary-600 font-bold text-2xl">{myItem.title.charAt(0)}</span>
      </div> 
    }
  </div>
  
  <div class="p-6 flex flex-col h-full">
    <h3 class="m-0 text-xl font-bold text-gray-900 card-title group-hover:text-primary-600 transition-colors duration-200 mb-3">
      { myItem?.title }
    </h3>
    <p class="text-gray-600 leading-relaxed card-description flex-grow mb-4 text-sm line-clamp-4">
      { myItem.description }
    </p>
    <div class="mt-auto">
      <div class="flex flex-wrap gap-2 mb-4">
        { myItem.tags?.slice(0, 3).map(
          (e: string) => <UiTag tag={e} /> )
        }
        {myItem.tags?.length > 3 && (
          <span class="text-xs text-gray-500 px-2 py-1 bg-gray-100 rounded-full">
            +{myItem.tags.length - 3} more
          </span>
        )}
      </div>
      <div class="flex items-center justify-between">
        <span class="text-sm font-medium text-primary-600 group-hover:text-primary-700">
          View Details
        </span>
        <svg class="w-4 h-4 text-primary-600 group-hover:text-primary-700 group-hover:translate-x-1 transition-all duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    </div>
  </div>
</a>