---
import UiTag from "@components/ui/tags/Tag.astro";
import DirectoryFeaturedTag from "../FeaturedTag.astro";
const { myItem, href } = Astro.props;
---

<a href={href}
  class="block h-full bg-white border border-gray-200 hover:border-gray-300 hover:shadow-lg rounded-xl relative group transition-all duration-300 overflow-hidden card-hover">
  { myItem.featured ? <DirectoryFeaturedTag class="ml-6"  /> : <></> }
  { myItem.image ? <img class="w-full h-48 rounded-t-xl object-cover group-hover:scale-105 transition-transform duration-300"
    src={myItem.image.src} width={myItem.image.width} height={myItem.image.height} alt={myItem.title} /> :  <div
    class="w-full h-48 px-4 text-center flex justify-center items-center rounded-t-xl font-bold text-xl bg-gradient-to-br from-gray-50 to-gray-100 text-gray-600">
    {myItem.title }
  </div> }
  <div class="p-6">
    <h3 class="m-0 text-lg font-semibold text-gray-900 card-title group-hover:text-primary-600 transition-colors duration-200">
      { myItem?.title }
    </h3>
    <p class="line-clamp-3 mt-3 text-gray-600 leading-relaxed card-description">
      { myItem.description }
    </p>
    <div class="mt-4 flex flex-wrap gap-2">
      { myItem.tags?.map(
        (e: string) => <UiTag tag={e} /> )
      }
    </div>
  </div>
</a>